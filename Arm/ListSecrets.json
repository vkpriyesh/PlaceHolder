{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "sourceKeyVaultName": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing source key vault."
      }
    }
  },
  "variables": {
    "secretsList": "[listSecrets(parameters('sourceKeyVaultName')).value]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "name": "displaySecrets",
      "apiVersion": "2017-05-10",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.KeyVault/vaults/secrets",
              "name": "[concat(parameters('sourceKeyVaultName'), '/', copyIndex(), '/', reference(concat('Microsoft.KeyVault/vaults/secrets/', copyIndex()), '2018-02-14').name)]",
              "apiVersion": "2018-02-14",
              "copy": {
                "name": "displayLoop",
                "count": "[length(variables('secretsList'))]",
                "input": {
                  "name": "[reference(concat('Microsoft.KeyVault/vaults/secrets/', copyIndex()), '2018-02-14').name]"
                }
              }
            }
          ]
        }
      }
    }
  ]
}
