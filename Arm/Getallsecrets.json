{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "secretNamePrefix": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "The prefix for the secret names to retrieve."
            }
        }
    },
    "variables": {
        "secretNames": [],
        "secretValues": {}
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(parameters('secretNamePrefix'), '-', uniqueString(resourceGroup().id))]",
            "apiVersion": "2016-10-01",
            "dependsOn": [],
            "comments": "Get the list of secret names and their values.",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "list": {
                    "ref": "secretNames"
                }
            },
            "resources": [
                {
                    "name": "[concat(parameters('secretNamePrefix'), '/', variables('secretNames')[copyIndex()])]",
                    "type": "Microsoft.KeyVault/vaults/secrets",
                    "apiVersion": "2016-10-01",
                    "dependsOn": [
                        "[concat('Microsoft.KeyVault/vaults/', parameters('secretNamePrefix'), '-', uniqueString(resourceGroup().id))]"
                    ],
                    "comments": "Get the value of the secret.",
                    "copy": {
                        "name": "secretCopy",
                        "count": "[length(variables('secretNames'))]"
                    },
                    "properties": {
                        "value": {
                            "listKeys": [
                                "secretNames"
                            ],
                            "listValues": [
                                "secretValues"
                            ],
                            "listIndex": "[copyIndex()]",
                            "reference": {
                                "keyVault": {
                                    "id": "[resourceId('Microsoft.KeyVault/vaults', parameters('secretNamePrefix')- uniqueString(resourceGroup().id))]"
                                },
                                "secretName": "[variables('secretNames')[copyIndex()]]"
                            }
                        }
                    }
                }
            ]
        }
    ]
}
