{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sourceKeyVaultName": {
            "type": "string",
            "metadata": {
                "description": "The name of the source key vault."
            }
        },
        "newKeyVaultName": {
            "type": "string",
            "metadata": {
                "description": "The name of the new key vault to be created."
            }
        },
        "newKeyVaultResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "The resource group in which the new key vault should be created."
            }
        }
    },
    "variables": {
        "sourceKeyVaultId": "[resourceId('Microsoft.KeyVault/vaults', parameters('sourceKeyVaultName'))]",
        "newKeyVaultId": "[resourceId('Microsoft.KeyVault/vaults', parameters('newKeyVaultName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2019-09-01",
            "name": "[parameters('newKeyVaultName')]",
            "location": "[resourceGroup().location]",
            "resourceGroup": "[parameters('newKeyVaultResourceGroup')]",
            "properties": {
                "sku": {
                    "name": "standard"
                },
                "accessPolicies": [],
                "enabledForDeployment": true,
                "enabledForTemplateDeployment": true,
                "enabledForDiskEncryption": true
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/listSecrets",
            "name": "copySecrets",
            "apiVersion": "2019-09-01",
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', parameters('newKeyVaultName'))]"
            ],
            "properties": {
                "sourceVault": {
                    "id": "[variables('sourceKeyVaultId')]"
                },
                "secrets": [
                    {
                        "name": "secret1"
                    },
                    {
                        "name": "secret2"
                    },
                    {
                        "name": "secret3"
                    }
                ]
            }
        }
    ]
}
